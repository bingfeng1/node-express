<ul>
    {{#each tours}}
    {{! I'm in a new block ... and the context has change}}
    <li>
        {{name}} - {{price}}
        {{#if ../currencies}}
        ({{../currency.abbrev}})
        {{/if}}
    </li>
    {{/each}}
    {{#unless currencies}}
    <p>All prices in {{currency.name}}</p>
    {{/unless}}

    {{#if specialsUrl}}
    {{! I'm in a new block ... but the context hasn't changed (sortof)}}
    <p>Check out {{specialsUrl}}</p>
    {{/if}}
    <p>
        {{#each currencies}}
        {{.}}
        {{else}}
        {{currency.name}}
        {{/each}}
    </p>
</ul>